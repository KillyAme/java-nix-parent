        <property name="hibernate.connection.password">1234567890</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.alavel.java.nix.lesson28.hometask.entity.Solution"/>
        <mapping class="com.alavel.java.nix.lesson28.hometask.entity.City"/>
        <mapping class="com.alavel.java.nix.lesson28.hometask.entity.Connection"/>
